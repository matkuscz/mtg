<h1>Player</h1>
<p><strong>Name: </strong><%= @player.name %></p>
<p><strong>Email: </strong><%= @player.email %></p>
<p><%= link_to 'Edit player', edit_player_path(@player) %></p>
<p><%= link_to 'Player list', players_path %></p>

<h2>Deck list:</h2>
<% @decks.each do |deck| %>
    <p>
      <strong>Deck name: </strong>
      <%= @deck[:name] %>
    </p>
<% end %>

<p>
  <%= link_to 'Create deck', new_player_deck_path(@player) %>
  <%= link_to 'List decks', player_decks_path(@player[:id]) %>
</p>